  <%= render 'shared/errors', obj: @category %>
        <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-secondary rounded", local: true)  do |f| %>
        <div class="form-group row">
            <%= f.label :name, "Kategoria:", class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Podaje nazwę kategorii" %>
            </div>
        </div>

 

          <div class="form-group row justify-content-center">
            <%= f.submit "Dodaj kategorię", class: "btn btn-outline-success" %>         
          </div>
        <% end %>