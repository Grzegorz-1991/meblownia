<h1 class = "text-center mt-4">Kategoria</h1>

<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
</div>

<div class="container">
    <% @categories.each do |category|%>
        <div class="row justify-content-md-center">
        <div class="col-4 mt-4">
 <div class="card shadow mb-5 bg-white rounded">
        <div class="card-body">
            <h5 class="card-title">Nazwa: <%= link_to category.name, category_path(category), class: "text-success" %></h5>
            <p class="card-text"><%= pluralize(category.mebles.count, "mebli") %></p>
        </div>
        <div class="card-footer text-muted"> 
            <a> Stworzono: <%= time_ago_in_words(category.created_at) %>, 
            <% if category.updated_at == nil %>
            Nie edytowano
            <% else %>
            Edytowano: <%= time_ago_in_words(category.updated_at) %>
            <% end %>
            </a>
        </div>
        </div>
        </div>
        </div>
    <% end %>
</div>

<div class="flickr_pagination mb-4">
    <%= will_paginate @categories, :container => false %>
</div>